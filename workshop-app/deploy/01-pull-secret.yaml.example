# Pull Secret Example for Quay.io
# Copy this file to 01-pull-secret.yaml and update with your credentials
#
# To create the pull secret:
# oc create secret docker-registry quay-pull-secret \
#   --docker-server=quay.io \
#   --docker-username=<your-username> \
#   --docker-password=<your-token> \
#   --dry-run=client -o yaml > deploy/01-pull-secret.yaml
#
# apiVersion: v1
# kind: Secret
# metadata:
#   name: quay-pull-secret
#   labels:
#     app: gitops-workshop
# type: kubernetes.io/dockerconfigjson
# data:
#   .dockerconfigjson: <base64-encoded-docker-config>
